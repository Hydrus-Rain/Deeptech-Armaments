	  <drawOffsetNorth>(0,0,0.12)</drawOffsetNorth>
	  <drawOffsetEast>(-0.02,0,-0.08)</drawOffsetEast>
	  <drawOffsetWest>(0,0,-0.08)</drawOffsetWest>
    </graphicData>
    <designationCategory>DeeptechArms</designationCategory>
    <costList>
      <Steel>250</Steel>
