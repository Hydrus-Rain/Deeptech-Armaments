<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<ThingDef ParentName="BenchBase">
 <defName>Synthesis_Bench</defName>
    <label>Synthesis Bench</label>
    <description>An Advanced workbench for creating technology.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Buildings/Synthbench</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>Transparent</shaderType>
	<drawSize>(2.5,1.5)</drawSize>
      <shadowData>
        <volume>(2.9, 0.3, 0.5)</volume>
        <offset>(0, 0, 0)</offset>
      </shadowData>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <costList>
	<Steel>100</Steel>
	<Plasteel>100</Plasteel>
	<ComponentIndustrial>4</ComponentIndustrial>
	<ComponentSpacer>1</ComponentSpacer>
    </costList>
    <costStuffCount>75</costStuffCount>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <WorkToBuild>3000</WorkToBuild>
      <MaxHitPoints>380</MaxHitPoints>
      <Flammability>0</Flammability>
      <Cleanliness>0</Cleanliness>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <paintable>true</paintable>
    </building>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>
</Defs>
