<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!--Siegecannon-->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Deeptech_Siegecannon</defName>
    <label>"Deluge"Siegecannon</label>
    <description>A High Caliber Multibarreled minigun. Produced to mow down hordes of Light to Medium armor, and to supress against heavy armor. Often used by extermination squads.</description>
    <graphicData>
      <drawSize>(1.5,1.5)</drawSize>
      <texPath>Things/Weapons/Ranged/SiegeCannon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.5</uiIconScale>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
    <recipeUsers>
        <li>Synthesis_Bench</li>
      </recipeUsers>
      <researchPrerequisite>Fabrication</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
       <recipeUsers Inherit="false">
	<li>Synthesis_Bench</li>
       </recipeUsers>
    </recipeMaker>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.86</AccuracyMedium>
      <AccuracyLong>0.89</AccuracyLong>
      <RangedWeapon_Cooldown>5.3</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>250</Plasteel>
      <Steel>425</Steel>
      <ComponentIndustrial>20</ComponentIndustrial>
      <ComponentSpacer>5</ComponentSpacer>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Deeptech_Siegecannon_Rounds</defaultProjectile>
        <warmupTime>5.5</warmupTime>
        <range>55</range>
        <ticksBetweenBurstShots>15</ticksBetweenBurstShots>
	<burstShotCount>30</burstShotCount>
        <soundCast>Shot_Autocannon</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>bayonet</label>
        <capacities>
          <li>Sharp</li>
        </capacities>
        <power>29</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Sharp</li>
          <li>Poke</li>
        </capacities>
        <power>19</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Deeptech_Siegecannon_Rounds</defName>
    <label>Siegecannon Rounds</label>
    <graphicData>
      <texPath>Things/Weapons/Projectiles/BulletLarge</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>75</damageAmountBase>
      <stoppingPower>5.5</stoppingPower>
      <speed>30</speed>
    </projectile>
  </ThingDef>

</Defs>
