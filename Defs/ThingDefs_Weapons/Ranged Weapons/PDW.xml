<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--PDW-->
	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>Deeptech_PDW</defName>
		<label>Personal Defense Weapon</label>
		<description>a small cheap economic weapon thats easy to mass produce, yet being reliable and light enough to be one-handed</description>
		<graphicData>
			<texPath>Things/Weapons/Ranged/PDW</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.5,1.5)</drawSize>
		</graphicData>
		<uiIconScale>2.0</uiIconScale>
		<soundInteract>Interact_SMG</soundInteract>
		<recipeMaker>
			<recipeUsers>
        			<li>Synthesis_Bench</li>
      			</recipeUsers>
			<researchPrerequisite>Fabrication</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
		</recipeMaker>
		<statBases>
			<WorkToMake>11000</WorkToMake>
			<Mass>1.1</Mass>
			<AccuracyTouch>0.90</AccuracyTouch>
			<AccuracyShort>0.85</AccuracyShort>
			<AccuracyMedium>0.79</AccuracyMedium>
			<AccuracyLong>0.62</AccuracyLong>
			<RangedWeapon_Cooldown>0.9</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Plasteel>10</Plasteel>
			<Steel>25</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Deeptech_PDW_rounds</defaultProjectile>
				<warmupTime>0.5</warmupTime>
				<range>19.9</range>
				<burstShotCount>5</burstShotCount>
				<ticksBetweenBurstShots>7</ticksBetweenBurstShots>
				<soundCast>Shot_MachinePistol</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>grip</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
	</ThingDef>

	<ThingDef ParentName="BaseBullet">
		<defName>Deeptech_PDW_rounds</defName>
		<label>deeptech PDW bullet</label>
		<graphicData>
			<texPath>Things/Weapons/Projectiles/BulletPistol</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>16</damageAmountBase>
			<speed>55</speed>
		</projectile>
	</ThingDef>
</Defs>
